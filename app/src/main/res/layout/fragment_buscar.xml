<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtIDBus"
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_baseline_navigate_next_24px"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/ingresaID"
                android:inputType="number"
                android:layout_margin = "15dp"
                android:textColor="@color/negro"
                android:textColorHint="@color/negro" />

            <Button
                android:id="@+id/btnBuscarBus"
                android:layout_width="115dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtIDModi"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/negro"
                android:background="@color/colorNaranjaClaro"
                android:textAllCaps="false"
                android:layout_margin = "15dp"
                android:text="@string/btnBuscar" />

        </LinearLayout>


        <EditText
            android:id="@+id/txtNombreBus"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/ingresaNombre"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />

        <Spinner
            android:id="@+id/spinnerOrgBus"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_margin = "15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCumpleBus"
                android:layout_width="400dp"
                android:layout_height="43dp"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24px"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/ingresaCumple"
                android:padding="10dp"
                android:textColor="@color/negro"
                android:textColorHint="@color/negro"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSexoBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight = "100dp"
                android:textColor="@color/negro"
                android:text="@string/eligeSexo" />

            <CheckBox
                android:id="@+id/checkBoxSexoBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/negro"
                android:text="@string/eligeMasculino" />


        </LinearLayout>

        <EditText
            android:id="@+id/txtTelefonoBus"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/ingresaTelefono"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />

        <Button
            android:id="@+id/botonLimpiar"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/negro"
            android:background="@color/colorNaranjaClaro"
            android:textAllCaps="false"
            android:layout_margin = "15dp"
            android:text="@string/btnLimpiar" />

    </LinearLayout>
</FrameLayout>