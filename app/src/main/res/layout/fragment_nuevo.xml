<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NuevoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/txtID"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/ic_baseline_navigate_next_24px"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/ingresaID"
            android:inputType="number"
            android:layout_margin = "15dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/ingresaNombre"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />

        <Spinner
            android:id="@+id/spinnerOrg"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_margin = "15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCumple"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24px"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/ingresaCumple"
                android:padding="10dp"
                android:textColor="@color/negro"
                android:textColorHint="@color/negro"
                android:enabled="false" />

            <Button
                android:id="@+id/btnDate"
                android:layout_width="115dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtCumple"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/negro"
                android:background="@color/colorNaranjaClaro"
                android:textAllCaps="false"
                android:layout_margin = "15dp"
                android:text="@string/fechabtn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:text="@string/eligeSexo"
                android:textColor="@color/negro"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/checkBoxSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eligeMasculino"
                android:textColor="@color/negro"
                android:textSize="15dp" />


        </LinearLayout>

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="400dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"

            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/ingresaTelefono"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonRegistrar"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textoContrasena"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/negro"
                android:background="@color/colorNaranjaClaro"
                android:textAllCaps="false"
                android:layout_margin = "15dp"
                android:text="@string/regisytrar" />

            <Button
                android:id="@+id/btnList"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/negro"
                android:background="@color/colorNaranjaClaro"
                android:textAllCaps="false"
                android:layout_margin = "15dp"
                android:text="@string/listar" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>